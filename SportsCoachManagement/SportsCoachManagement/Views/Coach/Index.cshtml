@model SportsCoachManagement.ViewModel.SportsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <button class="btn btn-info btn-lg" onclick="location.href='@Url.Action("CreateTest", "Coach")'">Create New Test</button>
 
    @if (null != Model.spTotalParticipants)
    {
        <table id="Participant" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
            <thead>
                <tr>
                    <th> <span style="font-size:large">Date</span></th>
                    <th><span style="font-size:large"> Number of participants</span></th>
                    <th><span style="font-size:large"> Test Type</span></th>
                    <th><span style="font-size:large">Action</span></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var mod in Model.spTotalParticipants)
                {
                    <tr>
                        <td><span class="testdate">@mod.TestDate.ToString("ddMMyyyy")</span></td>
                        <td>@mod.Testcount</td>
                        <td><span class="testtype"> @mod.TestType </span></td>
                        <td>@Html.ActionLink("Detail", "TestDetail", "Coach",new { TestName = mod.TestType,Testdate=mod.TestDate.ToString("ddMMyyyy") })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div id="dialog" style="display: none">
    </div>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/jquery-ui.js" type="text/javascript"></script>
    <link href="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.9/themes/blitzer/jquery-ui.css"
          rel="stylesheet" type="text/css" />

    @section Scripts{
        <script type="text/javascript">
        $(document).ready(function () {
            $('#Participant').DataTable();
        });       

        </script>
    }